#:import la kivy.adapters.listadapter
#:import factory kivy.factory
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import math math
<listMediaSelectable>:

<MediaSelectable>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    # active: True
    BoxLayout:
        padding: 5
        Label:
            text: root.songTitle
            size_hint_x: 0.6
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: root.artist
            size_hint_x: 0.15
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: root.type
            size_hint_x: 0.2
            halign: 'left'

        ButtonImage:
            size_hint_x: 0.05
            source: 'img/play.png'
            on_press:
                root.select(root.index)
                app.on_menu_selection(root.index)

<AlarmMediaSelectable>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        padding: 5
        Label:
            text: root.songTitle
            size_hint_x: 0.6
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: root.artist
            size_hint_x: 0.15
            text_size: self.size
            halign: 'left'
            valign: 'middle'

        Label:
            text: root.type
            size_hint_x: 0.2
            halign: 'left'

        ButtonImage:
            size_hint_x: 0.05
            source: 'img/play.png'
            on_press:
                root.select(root.index)
                app.on_alarm_media_selection(root.index)


<ButtonImage@ButtonBehavior+Image>
    rel_size: 1
    size_hint: self.rel_size, self.rel_size
    opacity: 1 if self.state == 'normal' else .5

<MenuButton>:
    size_hint_y: None
    height: dp(40)
    font_size: self.height * 0.6
    on_release: app.on_menu_selection(self.index)

<RVSongScreen>
    on_touch_down:
        app.reset_blank()
    rv: rv
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: rv
            viewclass: 'MediaSelectable'
            SelectableRecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: False
                touch_multiselect: True
        BoxLayout:
            size_hint_y: .15
            padding: (3,5)
            ButtonImage:
                source: 'img/settings.png'
                on_press: app.open_settings()
            ButtonImage:
                size: 50,50
                size_hint: None, None
                source: 'img/clock_1.png'
                on_press: app.show_alarms()
            ButtonImage:
                source: 'img/home.png'
                on_press:
                    app.show_clock()

<SongPopup@Popup>
    on_touch_down:
        app.reset_blank()
    rv: rv
    id: song_popup
    title: 'select media'
    pos_hint: {'center_x': 0.5, 'center_y': 0.45}
    size_hint: .8, .7
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: rv
            viewclass: 'AlarmMediaSelectable'
            SelectableRecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: False
                touch_multiselect: True
        BoxLayout:
            size_hint_y: .15
            Button:
                text: 'cancel'
                on_press: root.dismiss()

<PlayerScreen>:
    on_touch_down:
        app.reset_blank()
    FloatLayout:
        BoxLayout:
            size: root.size
            size_hint: None, None
            orientation: 'vertical'
            Image:
                source: 'img/carrousel_fictions132.png'
            Slider:
                id: song_pos
                size_hint_y: 0.1
                size_hint_x: 0.8
                max_value: 100
                value: root.song_progress
                cursor_image: 'img/play_pos.png'
                cursor_size: sp(16),sp(16)
                pos_hint: {"center_x":0.5, "center_y":0.5}

            BoxLayout:
                size_hint_y: 0.15
                ButtonImage:
                    size_hint_x: .2
                    source: 'img/song_list.png'
                    on_press:
                        app.stop_and_return()
                ButtonImage:
                    size_hint_x: 0.4
                    source: 'img/prev_1.png'
                    on_press:
                        root.prev_song()
                ButtonImage:
                    id: 'titleButton'
                    source: root.labelImage
                    on_press: root.plays()
                ButtonImage:
                    size_hint_x: 0.4
                    source: 'img/next_1.png'
                    on_press:
                        root.next_song()

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            padding: 10
            BoxLayout:
                size_hint: 0.1,0.1
                ButtonImage:
                    size: 50,50
                    source: 'img/home.png'
                    on_press:
                        app.show_clock()

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            BoxLayout:
                orientation: 'horizontal'
                size: 0.8 * root.width, 0.1 * root.height
                size_hint: None, None
                canvas:
                    Color:
                        rgba: .5, .3, .55, .5
                    Rectangle:
                        size: self.size
                        pos: self.pos
                BoxLayout:
                    orientation: 'vertical'
                    padding: (20,0)

                    Label:
                        id: Title
                        font_size: self.height * 0.8
                        text_size: self.size
                        text: root.songTitle

                    Label:
                        id: Artist
                        text: root.songArtist
                        font_size: self.height * 0.8
                        text_size: self.size
                Label:
                    size: 0.1 * root.width, 0.1 * root.height
                    size_hint: None, None
                    text: root.time_elapsed

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'center'
            BoxLayout:
                orientation: 'vertical'
                size: 50,root.height * 0.7
                size_hint: None, None
                Slider:
                    id: volume
                    max: 120
                    orientation: 'vertical'
                    value: root.playVolume
                    on_value: root.set_volume(volume.value)
                Label:
                    size_hint_y: 0.1
                    text: 'Vol.\n{:03}'.format(int(volume.value))


[ClockNumber@Label]:
    text: str(ctx.text)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(ctx.text-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(ctx.text-12))}
    font_size: self.height/16

<ClockScreen>:
    face: face
    ticks: ticks
    bk_ground: 'img/roud_clock.png'
    bk_ground_blank: 'img/round_clock_blank.png'
    blank: False
    canvas:
        Color:
            rgb: .3, .3, .3
        Rectangle:
            size: self.size
    on_touch_down:
        app.reset_blank()

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 10
        ButtonImage:
            size: 50,50
            size_hint: None, None
            source: 'img/settings.png'
            on_press: app.open_settings()

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        padding: 10
        ButtonImage:
            size: 50,50
            size_hint: None, None
            source: 'img/song_list.png'
            on_press: app.stop_and_return()

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        padding: 10
        ButtonImage:
            size: 50,50
            size_hint: None, None
            source: 'img/clock_1.png'
            on_press: app.show_alarms()

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        padding: 10
        BoxLayout:
            size_hint: 0.5,0.2
            Button:
                padding: 5,5
                text: root.next_alarm # root.alarm_left
                text_size: self.size
                font_size: 16
                halign: 'left'
                valign: 'top'
                on_press:
                    app.alarm_stop()

    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size: min(root.size), min(root.size)
        canvas:
            Color:
                rgb: 1, 1, 1 if not root.blank else 1,1,0
#            Ellipse:
#                size: self.size
#                pos: self.pos
            Rectangle:
                id:'bk_ground'
                source: root.bk_ground if not root.blank else root.bk_ground_blank
                size: self.size
                pos: self.pos

        ClockNumber:
            text: 1
        ClockNumber:
            text: 2
        ClockNumber:
            text: 3
        ClockNumber:
            text: 4
        ClockNumber:
            text: 5
        ClockNumber:
            text: 6
        ClockNumber:
            text: 7
        ClockNumber:
            text: 8
        ClockNumber:
            text: 9
        ClockNumber:
            text: 10
        ClockNumber:
            text: 11
        ClockNumber:
            text: 12

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: 0,100
        Label:
            id: label
            size_hint: 1,0.1
            font_size: 22
            text: root.current_date
            pos: 0,0
    Ticks:
        id: ticks
        r: min(root.size)*0.7/2

<BlankScreen>
    BoxLayout:
        on_touch_down:
            app.wake_up()

